{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV"]
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "cache": false,
      "env": ["NODE_ENV", "DATABASE_URL", "REDIS_URL"]
    },
    "clean": {
      "cache": false
    }
  }
}

