{
  "name": "@forgestack/emails",
  "version": "0.0.1",
  "private": true,
  "description": "React Email templates for ForgeStack",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@react-email/components": "^0.0.25",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "files": [
    "dist"
  ]
}

