# =============================================================================
# ForgeStack Worker - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# PostgreSQL connection string (must match API's DATABASE_URL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Local: postgresql://postgres:postgres@localhost:5432/forgestack_dev
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/forgestack_dev"

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
# Redis connection string for BullMQ job queue
# Format: redis://HOST:PORT or redis://:PASSWORD@HOST:PORT
# Local: redis://localhost:6379
# Must match API's REDIS_URL
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# EMAIL (Resend)
# -----------------------------------------------------------------------------
# Resend API key for sending emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email sender address (must be verified domain in Resend)
EMAIL_FROM="noreply@yourdomain.com"

# -----------------------------------------------------------------------------
# STRIPE
# -----------------------------------------------------------------------------
# Stripe secret key for webhook processing
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# -----------------------------------------------------------------------------
# FRONTEND URL
# -----------------------------------------------------------------------------
# Frontend URL for generating links in emails
# Local: http://localhost:3000
# Production: https://app.yourdomain.com
FRONTEND_URL="http://localhost:3000"

